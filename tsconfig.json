{
  "extends": "@dxsixpc/configs/tsconfig/tsconfig.react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "jsxImportSource": "@emotion/react",
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "docs/": ["docs"],
      "docs/*": ["docs/*"],
      "src": ["src"],
      "src/*": ["src/*"],
      "@dxsixpc/components": ["src"],
      "@dxsixpc/components/*": ["src/*"]
    },
    "types": ["react", "@emotion/react"],
    "allowJs": true
  },
  "include": [
    ".dumi/**/*",
    ".dumirc.ts",
    "src/**/*",
    "docs/react/**/*",
    "docs/vue/**/*",
    ".eslintrc.js",
    "commitlint.config.js",
    "dist/**/*"
  ],
  "exclude": ["node_modules"]
}
