{
  "extends": "@zpcscc/configs/tsconfig/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "jsxImportSource": "@emotion/react",
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "docs/": ["docs"],
      "docs/*": ["docs/*"],
      "src": ["src"],
      "src/*": ["src/*"],
      "@zpcscc/components": ["src"],
      "@zpcscc/components/*": ["src/*"]
    },
    "types": ["react", "@emotion/react"],
    "allowJs": true
  },
  "include": [
    ".dumirc.ts",
    "src/**/*",
    "docs/**/*",
    ".eslintrc.js",
    "commitlint.config.js",
    "unocss.config.ts",
    "dist/**/*"
  ],
  "exclude": ["node_modules"]
}
