{
  "extends": "@dxsixpc/configs/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "jsxImportSource": "@emotion/react",
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "docs/": ["docs"],
      "docs/*": ["docs/*"],
      "src": ["src"],
      "src/*": ["src/*"],
      "@dxsixpc/components": ["src"],
      "@dxsixpc/components/*": ["src/*"]
    },
    "types": ["react", "@emotion/react", "@rc-component/mini-decimal/es"]
  },
  "include": [
    ".dumi/**/*",
    ".dumirc.ts",
    "src/**/*",
    "docs/**/*",
    ".eslintrc.js",
    "commitlint.config.js"
  ]
}
